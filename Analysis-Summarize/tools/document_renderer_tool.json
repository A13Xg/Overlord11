{
  "name": "document_renderer",
  "description": "Renders complete documents: PDF reports, HTML pages, formatted documents.",
  "parameters": {
    "type": "object",
    "properties": {
      "document_type": {
        "type": "string",
        "enum": ["pdf_report", "html_page", "markdown_doc", "infographic", "dashboard"],
        "description": "The type of document to render."
      },
      "content": {
        "type": "string",
        "description": "The content to render (can be HTML, Markdown, or structured JSON)."
      },
      "template": {
        "type": "string",
        "enum": ["professional", "academic", "technical", "minimal", "creative", "custom"],
        "description": "The document template/style to use."
      },
      "options": {
        "type": "object",
        "description": "Rendering options.",
        "properties": {
          "title": {"type": "string"},
          "author": {"type": "string"},
          "date": {"type": "string"},
          "include_toc": {"type": "boolean"},
          "include_page_numbers": {"type": "boolean"},
          "page_size": {"type": "string", "enum": ["A4", "letter", "legal"]},
          "orientation": {"type": "string", "enum": ["portrait", "landscape"]},
          "margins": {"type": "object"},
          "header_footer": {"type": "boolean"}
        }
      },
      "output_path": {
        "type": "string",
        "description": "Optional output file path (relative to output directory)."
      },
      "use_external_api": {
        "type": "boolean",
        "description": "Whether to use external rendering API (if configured)."
      }
    },
    "required": ["document_type", "content"]
  }
}
