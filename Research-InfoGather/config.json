{
  "project_name": "Research-InfoGather",
  "version": "2.1.0",
  "model_config": {
    "provider": "anthropic",
    "models": {
      "anthropic": {
        "model_name": "claude-3-5-sonnet-20240620",
        "max_tokens": 4000,
        "env_var": "ANTHROPIC_API_KEY"
      },
      "gemini": {
        "model_name": "gemini-1.5-pro",
        "max_tokens": 4000,
        "env_var": "GOOGLE_GEMINI_API_KEY"
      }
    }
  },
  "style_definitions": {
    "formal": ["MLA", "APA", "CHICAGO", "HARVARD"],
    "informal": ["Scientific_Descriptive", "Persuasive", "Narrative"]
  },
  "global_settings": {
    "default_style": "Scientific_Descriptive",
    "feature_flags": {
      "table_of_contents": true,
      "works_cited": true,
      "executive_summary": true,
      "conflict_reporting": true
    }
  },
  "research_constraints": {
    "min_sources_per_topic": 3,
    "max_sources_per_topic": 6,
    "blacklist_domains": [
      "wikipedia.org", "facebook.com", "x.com", 
      "reddit.com", "quora.com", "pinterest.com"
    ],
    "preferred_sources": [
      "arxiv.org", "reuters.com", "bloomberg.com", 
      "nature.com", "*.gov", "*.edu"
    ]
  },
  "orchestration_logic": {
    "mode": "hierarchical",
    "max_loops": 12,
    "halt_on_low_confidence": true,
    "approval_checkpoints": ["after_planning", "before_final_output"]
  }
}