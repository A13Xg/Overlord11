{
  "project_name": "Research-InfoGather",
  "version": "2.0.0",
  "global_settings": {
    "user_persona": "Professional Analyst",
    "output_format": "Markdown_Report",
    "cite_style": "Author-Year (URL)",
    "max_parallel_agents": 3
  },
  "research_constraints": {
    "min_sources_per_topic": 3,
    "max_sources_per_topic": 6,
    "blacklist_domains": [
      "wikipedia.org",
      "quora.com",
      "pinterest.com",
      "social-media-unverified.com"
    ],
    "preferred_sources": ["arxiv.org", "reuters.com", "bloomberg.com", "gov_data"]
  },
  "orchestration_logic": {
    "mode": "hierarchical",
    "max_loops": 12,
    "halt_on_low_confidence": true,
    "approval_checkpoints": ["after_planning", "before_final_output"]
  },
  "agents": [
    {"id": "DS_DIR_01", "role": "Orchestrator", "file": "orchestrator.md"},
    {"id": "DS_RES_02", "role": "Researcher", "file": "researcher.md"},
    {"id": "DS_AGG_03", "role": "Aggregator", "file": "aggregator.md"},
    {"id": "DS_FMT_04", "role": "Formatter", "file": "formatter.md"},
    {"id": "DS_REV_05", "role": "Proofreader", "file": "proofreader.md"}
  ]
}