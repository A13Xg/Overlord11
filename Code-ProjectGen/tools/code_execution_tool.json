{
  "name": "code_execution",
  "description": "Execute code in a sandboxed environment. Supports running Python scripts, shell commands, and test suites. Returns stdout, stderr, and exit code.",
  "parameters": {
    "type": "object",
    "properties": {
      "action": {
        "type": "string",
        "enum": ["run_python", "run_shell", "run_tests", "install_deps"],
        "description": "Type of execution to perform"
      },
      "code": {
        "type": "string",
        "description": "Python code to execute (for 'run_python' action)"
      },
      "command": {
        "type": "string",
        "description": "Shell command to execute (for 'run_shell' action)"
      },
      "file_path": {
        "type": "string",
        "description": "Path to file to execute or test directory"
      },
      "timeout": {
        "type": "integer",
        "description": "Execution timeout in seconds (default: 30)",
        "default": 30
      },
      "working_dir": {
        "type": "string",
        "description": "Working directory for execution (relative to workspace)"
      }
    },
    "required": ["action"]
  }
}
